<Alloy>
  <View id="login" class="container">
    <Label id="header">Account info</Label>
    <Label class="textfieldLabel">Name</Label>
    <TextField id="name" hintText="Jane Doe" returnKeyType="Ti.UI.RETURNKEY_NEXT" onReturn="focusEmail" />
    <Label class="textfieldLabel">Email</Label>
    <TextField id="email" hintText="your.email@example.com" returnKeyType="Ti.UI.RETURNKEY_NEXT" onReturn="focusPassword" />
    <Label class="textfieldLabel">Password</Label>
    <TextField id="password" hintText="*********" returnKeyType="Ti.UI.RETURNKEY_DONE" onReturn="loginUser" />
    <View id="changeLoginType">
      <Label onClick="changeToLogin" id="changeToLogin">I already have an account</Label>
      <Label onClick="changeToRegister" id="changeToRegister">I need to register for an account</Label>
    </View>
  </View>
</Alloy>
